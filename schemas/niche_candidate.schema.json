{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/niche_candidate.schema.json",
  "title": "NicheCandidate",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "nicheName",
    "targetAudience",
    "contentFormats",
    "uniqueAngle",
    "examplePostIdeas",
    "creatorPersonaTone",
    "productionRequirements",
    "monetizationRoutes"
  ],
  "properties": {
    "nicheName": {"type": "string", "minLength": 1},
    "targetAudience": {"type": "string", "minLength": 1},
    "contentFormats": {"type": "array", "minItems": 1, "items": {"type": "string"}},
    "uniqueAngle": {"type": "string", "minLength": 1},
    "examplePostIdeas": {"type": "array", "minItems": 3, "items": {"type": "string"}},
    "creatorPersonaTone": {"type": "string", "minLength": 1},
    "productionRequirements": {"type": "array", "items": {"type": "string"}},
    "monetizationRoutes": {"type": "array", "minItems": 1, "items": {"type": "string"}}
  }
}
