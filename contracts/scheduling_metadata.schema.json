{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scheduling_metadata.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "trace_id",
    "created_at",
    "payload"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "items"
      ],
      "properties": {
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "schedule_id",
              "script_id",
              "publish_datetime",
              "timezone",
              "slot_label",
              "kpi_objective",
              "platform_metadata"
            ],
            "properties": {
              "schedule_id": {
                "type": "string",
                "minLength": 1
              },
              "script_id": {
                "type": "string",
                "minLength": 1
              },
              "publish_datetime": {
                "type": "string",
                "format": "date-time"
              },
              "timezone": {
                "type": "string",
                "minLength": 1
              },
              "slot_label": {
                "type": "string",
                "enum": [
                  "morning",
                  "afternoon",
                  "evening"
                ]
              },
              "kpi_objective": {
                "type": "string",
                "enum": [
                  "reach",
                  "saves",
                  "shares",
                  "watch-through"
                ]
              },
              "platform_metadata": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "caption",
                  "hashtags",
                  "thumbnail_text",
                  "hook_text"
                ],
                "properties": {
                  "caption": {
                    "type": "string",
                    "minLength": 1
                  },
                  "hashtags": {
                    "type": "array",
                    "minItems": 5,
                    "items": {
                      "type": "string",
                      "minLength": 2
                    },
                    "uniqueItems": true
                  },
                  "thumbnail_text": {
                    "type": "string",
                    "minLength": 1
                  },
                  "hook_text": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
