{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "idea_generation.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["request_id", "niche", "tone_preference", "idea_count", "ideas"],
  "properties": {
    "request_id": {"type": "string", "minLength": 1},
    "niche": {"type": "string", "minLength": 1},
    "tone_preference": {"type": "string", "minLength": 1},
    "idea_count": {"type": "integer", "minimum": 10},
    "ideas": {
      "type": "array",
      "minItems": 10,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "idea_id",
          "rank",
          "title",
          "premise",
          "audience_pain_or_desire",
          "hook_options",
          "thumbnail_text_options",
          "caption_direction"
        ],
        "properties": {
          "idea_id": {"type": "string", "minLength": 1},
          "rank": {"type": "integer", "minimum": 1},
          "title": {"type": "string", "minLength": 1},
          "premise": {"type": "string", "minLength": 1},
          "audience_pain_or_desire": {"type": "string", "minLength": 1},
          "hook_options": {"type": "array", "minItems": 3, "items": {"type": "string", "minLength": 1}, "uniqueItems": true},
          "thumbnail_text_options": {"type": "array", "minItems": 2, "items": {"type": "string", "minLength": 1}},
          "caption_direction": {"type": "string", "minLength": 1}
        }
      }
    }
  }
}
